{{>header}}
{{>navbar}}
{{>sidebar}}
  
  <main id="main" class="main">

    <div class="pagetitle">
      <h1>{{title}}</h1>
    </div><!-- End Page Title -->

    <section class="section dashboard">
      <div class="row">
        
        {{#each collections}}
        <div class="col-lg-4">
              <div class="card info-card sales-card">

                <div class="filter">
                  <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                  <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                    <li class="dropdown-header text-start">
                      <h6>Filter</h6>
                    </li>
                    <li><a class="dropdown-item" href="editCollection/{{this.id}}">Edit</a></li>
                    <li><a class="dropdown-item" href="deleteCollection/{{this.id}}">Delete</a></li>
                  </ul>
                </div>

                <div class="card-body">
                  <a href="task/{{this.id}}">
                  <h5 class="card-title">{{this.name}}</h5>
                  </a>
                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-journal-text"></i>
                    </div>
                    <div class="ps-3">
                      <span class="text-success small pt-1 fw-bold">12%</span> <span class="text-muted small pt-2 ps-1">Task Done</span>
                    </div>
                  </div>
                  
                </div>

              </div>
            </div>
        {{/each}}
        

        {{#if isLogin}}
        <div class="col-lg-4">
          <div class="card pb-4">
            <div class="card-body">
              <a href="/addCollection">
              <img class="img_collec" src="/public/image/add_data.png" alt="">
              <h5 class="card-title">Add Collection</h5>
              </a>
            </div>
          </div>
        </div>
        {{/if}}
      </div>
    </section>

  </main><!-- End #main -->

{{>footer}}